@model FloraWeb.Models.UserViewModel
@{
    ViewBag.Title = "Add New Users";
    Layout = "~/Views/Shared/_LHome.cshtml";
    var errorMessage = TempData["ErrorMessage"] ?? string.Empty;
    var successMessage = TempData["SuccessMessage"] ?? string.Empty;
}



<div class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">@ViewBag.Title</h3>
                    </div>
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "quickForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="form-group">
                                <label for="UserGroupId">User Group</label>
                                @Html.DropDownList("UserGroupId", new SelectList(Model.UserGroupList, "Id", "Name"), new { @class = "form-control select2" })
                            </div>
                            <div class="form-group">
                                <label for="name">LoginId</label>
                                <input type="text" name="LoginId" class="form-control" id="LoginId" placeholder="Enter LoginId" value="@Model.LoginId">
                            </div>

                            <div class="form-group">
                                <label for="LoginName">Login Name</label>
                                <input type="text" name="LoginName" class="form-control" id="LoginName" placeholder="Enter Login Name"  value="@Model.LoginName">
                            </div>

                            <div class="form-group">
                                <label for="ContactNumber">Email</label>
                                <input type="email" name="Email" class="form-control" id="Email" placeholder="Enter Email"  value="@Model.Email">
                            </div>

                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div><!-- /.container-fluid -->
</div>

@section Styles{
    <link rel="stylesheet" href="~/Assets/plugins/select2/css/select2.min.css">
